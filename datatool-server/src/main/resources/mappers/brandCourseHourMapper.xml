<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.datatoolserver.mapper.brandCourseHourMapper">
    <select id="selectHour" resultType="com.example.datatoolserver.pojo.BrandCourseHour">
        select * from brand_course_hour where course_id = #{courseId};
    </select>

    <select id="selectHourInfo" resultType="com.example.datatoolserver.pojo.BrandCourseHour">
        select * from brand_course_hour where hour_id = #{courseHourId};
    </select>

</mapper>